Pin-Priority: 700

# Prefer netdata repo for netdata packages, but nothing else
Package: netdata*
Pin: origin repo.netdata.cloud
Pin-Priority: 991

Package: *
Pin: origin repo.netdata.cloud
Pin-Priority: -1
